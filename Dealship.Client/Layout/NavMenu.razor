@using Microsoft.AspNetCore.Components.Routing

<!--   кореневий елемент nav   -->
<nav class="flex-grow-1 overflow-auto"
     @attributes="AdditionalAttributes">

    <ul class="nav nav-pills flex-column py-3 small">

        @foreach (var link in Links)
        {
            <li class="nav-item">
                <NavLink class="nav-link text-light d-flex align-items-center gap-2"
                         activeClass="active"
                         href="@link.Url"
                         Match="@(link.Url == "/" ? NavLinkMatch.All : NavLinkMatch.Prefix)">
                    <i class="@link.Icon"></i>
                    <span>@link.Text</span>
                </NavLink>
            </li>
        }
    </ul>
</nav>

@code {
    /* ⬇️ сюди «сідають» УСІ додаткові атрибути (id, class, data-...) */
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private readonly (string Text, string Url, string Icon)[] Links =
    {
        ("Home",          "/",             "bi-house"),
        ("Cars",          "/cars",         "bi-car-front"),
        ("Colors",        "/colors",       "bi-palette"),
        ("Fuel Types",    "/fueltypes",    "bi-droplet"),
        ("Transmissions", "/transmissions","bi-gear"),
        ("Engines",       "/engines",      "bi-speedometer2"),
        ("Customers",     "/customers",    "bi-people"),
        ("Orders",        "/orders",       "bi-journal-check"),
        ("Users",         "/users",        "bi-person-badge")
    };
}
